{
  "name": "peasy-fe",
  "private": true,
  "version": "0.0.0",
  "author": "NightCat<nightcat@hzfe.org>",
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:template": "vue-tsc --noEmit && vite build --config vite.template.config.ts --mode template && npm run template",
    "template": "cp -r template-dist/ peasy-be/template/ && cp -r template.html peasy-be/template/template.html",
    "preview": "vite preview",
    "prettier": "npx prettier --write src/"
  },
  "dependencies": {
    "@ckpack/vue-color": "^1.2.0",
    "@types/sortablejs": "^1.13.0",
    "ahooks-vue": "^0.13.3",
    "floating-vue": "^2.0.0-beta.17",
    "html2canvas": "^1.4.1",
    "lodash": "^4.17.21",
    "mande": "^2.0.2",
    "mitt": "^3.0.0",
    "moveable": "^0.30.0",
    "panzoom": "^9.4.3",
    "pinia": "^2.0.15",
    "vue": "^3.2.25",
    "vue-slider-component": "^4.1.0-beta.1",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.3",
    "@vitejs/plugin-vue": "^2.3.3",
    "prettier": "^2.7.1",
    "sass": "^1.53.0",
    "typescript": "^4.5.4",
    "vite": "^2.9.9",
    "vite-svg-loader": "^3.4.0",
    "vue-tsc": "^0.34.7"
  }
